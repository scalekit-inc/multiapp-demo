{
  "name": "example-desktop-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:mac": "electron-builder --mac dmg --x64 --arm64"
  },
  "dependencies": {
    "electron": "^31.3.1",
    "keytar": "^7.9.0",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.desktop.app",
    "productName": "Example Desktop App",
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "protocols": [
      {
        "name": "Example Desktop App protocol",
        "schemes": [
          "exampledesktopapp"
        ]
      }
    ]
  }
}